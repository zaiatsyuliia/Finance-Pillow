@model Presentation.Models.StatisticsViewModel
<title>@ViewData["Title"]</title>

<div class="home-div">
    <h2 data-lang="en">Income Statistics</h2>
    <h2 data-lang="uk" style="display: none;">Статистика Доходів</h2>
</div>

<div class="home-div">
    <h2 data-lang="en">Month</h2>
    <h2 data-lang="uk">За місяць</h2>
    <div class="statistics-div">
        <div id="columnChartForMonthDaily" style="width: 60%; height: 500px;"></div>
        <div id="pieChartForMonthTotal" style="width: 45%; height: 500px;"></div>
    </div>
</div>

<div class="home-div">
    <h2 data-lang="en">6 Month</h2>
    <h2 data-lang="uk">За 6 місяців</h2>
    <div class="statistics-div">
        <div id="columnChartForSixMonthsMonthly" style="width: 60%; height: 500px;"></div>
        <div id="pieChartForSixMonthsTotal" style="width: 45%; height: 500px;"></div>
    </div>
</div>

<div class="home-div">
    <h2 data-lang="en">Year</h2>
    <h2 data-lang="uk">За рік</h2>
    <div class="statistics-div">
        <div id="columnChartForYearMonthly" style="width: 60%; height: 500px;"></div>
        <div id="pieChartForYearTotal" style="width: 45%; height: 500px;"></div>
    </div>
</div>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<script>
    var categories = @Html.Raw(Json.Serialize(Model.Categories.Select(e => e.Name)));
    var monthDaily = @Html.Raw(Json.Serialize(Model.MonthDaily));
    var monthTotal = @Html.Raw(Json.Serialize(Model.MonthTotal));
    var sixMonthMonthly = @Html.Raw(Json.Serialize(Model.SixMonthsMonthly));
    var sixMonthTotal = @Html.Raw(Json.Serialize(Model.SixMonthsTotal));
    var yearMonthly = @Html.Raw(Json.Serialize(Model.YearMonthly));
    var yearTotal = @Html.Raw(Json.Serialize(Model.YearTotal));
</script>
<script src="~/js/statistics.js"></script>